<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/detailSportsImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_tennis"
            android:adjustViewBounds="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:padding="8dp"
            android:layout_alignBottom="@+id/detailSportsImage"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            tools:text="@string/title_placeholder"
            style="@style/TextAppearance.AppCompat.Headline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailNewsTitle"
            android:padding="8dp"
            android:layout_below="@+id/detailSportsImage"
            android:textColor="@android:color/secondary_text_dark"
            android:text="@string/news_placeholder"
            style="@style/TextAppearance.AppCompat.Subhead"/>

        <TextView
            android:id="@+id/detailSubTitle"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailNewsTitle"
            android:padding="8dp"
            tools:text="@string/sports_info_placeholder" />

    </RelativeLayout>

</ScrollView>